<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reportHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/default_margin"
            android:text="@string/my_reports"
            android:textColor="#000000"
            style="@style/TextAppearance.AppCompat"
            android:textSize="24sp"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/reportsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reportHeaderTextView"
            android:padding="@dimen/default_margin"
            android:visibility="gone"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addRepoortFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_add"/>

        <TextView
            android:id="@+id/emptyReportListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/empty_report_list"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/default_margin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:visibility="gone"/>

    </RelativeLayout>

</FrameLayout>